<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:viewBindingIgnore="true">
        <LinearLayout
            android:elevation="10dp"
            android:orientation="horizontal"
            android:background="@drawable/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <TextView
                android:text="Nimbbl"
                android:layout_gravity="center"
                android:fontFamily="@font/noto_sans"
                android:gravity="start"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="#3F414D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_round_settings_24"
                android:backgroundTint="@android:color/black"/>

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Product Details:"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img"
                    android:src="@drawable/img_1"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/txt_title"
                        android:layout_gravity="center"
                        android:text="Colourful Mandalas."
                        android:layout_width="wrap_content"
                        android:textColor="#AD000000"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_ruppes"
                        android:text="â‚¹"
                        android:layout_width="wrap_content"
                        android:textColor="#AD000000"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="16dp" />
                    <EditText
                        android:id="@+id/txt_amount"
                        android:text="2"
                        android:layout_width="match_parent"
                        android:textColor="#AD000000"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/noto_sans"
                        android:textSize="16dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/txt_dscription"
                    android:layout_marginTop="5dp"
                    android:text="Convert your dreary device into a bright happy place with this wallpaper by Speedy McVroom"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/noto_sans"
                    android:layout_marginBottom="20dp"
                    android:textSize="14dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Details:"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_user_first_name"
                    android:hint="Enter first name"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_user_last_name"
                    android:hint="Enter last name"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_user_email_id"
                    android:hint="Enter email id"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_user_mobile_number"
                    android:hint="Enter mobile number"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="User Address Details:"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_user_address_line_1"
                    android:hint="Enter Flat No."
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_street"
                    android:hint="Enter Street"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_landmark"
                    android:hint="Enter landmark"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/txt_area"
                    android:hint="Enter area"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_city"
                    android:hint="Enter city"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_state"
                    android:hint="Enter state"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
                <EditText
                    android:id="@+id/txt_pin_code"
                    android:hint="Enter pincode"
                    android:layout_width="match_parent"
                    android:textColor="#AD000000"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:fontFamily="@font/noto_sans"
                    android:textSize="16dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <Button
                android:id="@+id/btn_buy_now"
                android:textAllCaps="false"
                android:text="Buy Now"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/btn_background"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/noto_sans"
                android:textSize="16dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>